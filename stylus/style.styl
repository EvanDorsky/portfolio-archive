@import font
@import vendor

blue-color = #425668

font-size = 18px

doc-font()
    font-family DIN
    font-weight 300
    font-size font-size

*
    padding 0px
    margin 0px

html
    height 100%
    width 100%

body
    doc-font()
    background-color white
    color blue-color

    height 100%

.inverted
    background-color blue-color
    color white

ul
    list-style none

#main-splash
    position relative
    background-image url(/img/evan.jpg)
    background-size 100%
    background-position center

    height 24rem
    display flex
    align-items flex-end
    
    .overlay
        position absolute
        background-color #0004
        width 100%
        height 100%

    .bio-text
        display flex
        flex-flow column

        z-index 1

        font-size 2rem
        
        color white

        padding-bottom 1rem

        p
            padding .25rem 1.5rem

            b
                font-weight 500

        .name
            font-size 2.5rem

.section-container
    display flex
    flex-flow row wrap
    justify-content space-around

.container-title
    flex 0 1 100%
    
    font-size 2rem
    padding 1rem

.project
    display flex
    flex-flow column

    align-items center
    
    flex 0 1 auto

    margin .5rem
    
    img
        flex 0 1 auto
        width auto
        height 10em
    
    .title
        flex 0 1 auto
        font-size 1.2rem
        width 100%
        
    text-align center